<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DentalApp"
             x:Class="DentalApp.MainPage" Title="Каинская стоматология" BackgroundColor="#2196f3">
    <StackLayout>
        <Image Source="mainPhoto.jpg" Margin="10,10,10,10"/>
        <Button x:Name="CallButton"  Text="Позвонить" TextColor="White" BackgroundColor="#2196f3"
            VerticalOptions="Start"
            HorizontalOptions="Start" Clicked="CallButton_Clicked"/>
       
        <Button x:Name="ToInformationPageButton" Text="Информация" TextColor="White" BackgroundColor="#2196f3"
           VerticalOptions="FillAndExpand" 
           HorizontalOptions="Start" Clicked="ToInformationPage"/>
       
        
        <Button x:Name="ToModalPageButton" Text="Запись на прием" TextColor="White" BackgroundColor="#2196f3"
            VerticalOptions="End" 
            HorizontalOptions="Start" Clicked="ToModalPage"/>
        
    </StackLayout>
</ContentPage>